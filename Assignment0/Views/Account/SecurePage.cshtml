<style>
    .container {
        max-width: 600px;
        margin: auto;
        background-color: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h1 {
        font-size: 2rem;
        color: #333;
        margin-bottom: 1rem;
    }

    h2 {
        font-size: 1.2rem;
        color: #666;
        margin-top: 1rem;
        margin-bottom: 0.5rem;
    }

    .info {
        font-size: 1.1rem;
        color: #007bff;
    }

    .profile-pic {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 1rem;
        border: 3px solid #007bff;
    }
</style>

<div class="container">
    <img class="profile-pic" src="~/uploads/@ViewBag.ProfilePicturePath" alt="Profile Picture" />
    <h1>Hello, @ViewBag.Name 👋</h1>
    <h2>Your Email ID is:</h2>
    <div class="info">@ViewBag.Email</div>
</div>
